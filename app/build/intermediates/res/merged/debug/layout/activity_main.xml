<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tetilengineering.dashio.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #0"
            android:id="@+id/DI0_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #1"
            android:id="@+id/DI1_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #2"
            android:id="@+id/DI2_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator_on"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #3"
            android:id="@+id/DI3_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator_on"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #4"
            android:id="@+id/DI4_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #5"
            android:id="@+id/DI5_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator_on"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #6"
            android:id="@+id/DI6_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="DIGITAL INPUT #7"
            android:id="@+id/DI7_indicator"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/digital_indicator"
            android:textColor="#000000"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #0"
            android:id="@+id/DO0_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #1"
            android:id="@+id/DO1_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #2"
            android:id="@+id/DO2_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #3"
            android:id="@+id/DO3_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout2">

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #4"
            android:id="@+id/DO4_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #5"
            android:id="@+id/DO5_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #6"
            android:id="@+id/DO6_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Digital Output #7"
            android:id="@+id/DO7_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3"
        android:layout_marginRight="10dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/google_maps_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/google_maps"/>
    </LinearLayout>
</RelativeLayout>
